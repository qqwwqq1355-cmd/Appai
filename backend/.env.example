# Server Configuration
PORT=3000
NODE_ENV=development

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/marketlens
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/marketlens

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRY=1d
JWT_REFRESH_EXPIRY=7d

# API Keys (Add your keys here)
AMAZON_API_KEY=your_amazon_api_key
AMAZON_API_SECRET=your_amazon_api_secret
EBAY_API_KEY=your_ebay_api_key
ALIEXPRESS_API_KEY=your_aliexpress_api_key

# Google Cloud Vision API (for AI/ML)
GOOGLE_CLOUD_PROJECT_ID=your_project_id
GOOGLE_APPLICATION_CREDENTIALS=path/to/service-account-key.json

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
